<section class="content-master">
    <header class="content-header">
        <div class="content-kind-title">{{t 'Pages'}}</div>
        {{#link-to "pages.new" class="content-add btn btn-success btn-xs" title=(t 'page.new')}}<i class="fa fa-plus"></i> {{t 'page.new'}}{{/link-to}}
    </header>
    {{#view "paginated-scroll-box" tagName="ol" classNames="content-body"}}
        {{#each controller itemView="list-item-view" as |item|}}
            {{#link-to "pages.page" item title=(t 'page.edit')}}
                {{#if item.cover}}
                    <div class="item-cover">
                        <img src={{item.cover.squareUrl}} alt={{t 'coverImage'}} />
                    </div>
                {{/if}}
                <div class="item-infos">
                    <h3 class="item-title">{{item.title}}</h3>
                    <section class="item-meta">
                        {{item.tagline}}
                    </section>
                </div>
            {{/link-to}}
        {{/each}}
    {{/view}}
</section>
<section class="content-details">
    {{outlet}}
</section>
