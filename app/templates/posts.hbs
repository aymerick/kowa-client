<section class="content-master">
    <header class="content-header">
        <div class="content-kind-title">{{t 'Posts'}}</div>
        {{#link-to "posts.new" class="content-add btn btn-success btn-xs" title="New Post"}}<i class="fa fa-plus"></i> {{t 'post.new'}}{{/link-to}}
    </header>
    {{#view "paginated-scroll-box" tagName="ol" classNames="content-body"}}
        {{#each item in controller itemView="list-item-view" itemTagName="li"}}
            {{#link-to "posts.post" item title="Edit this post"}}
                {{#if item.cover}}
                    <div class="item-cover">
                        <img {{bind-attr src=item.cover.squareUrl}} alt="cover image" />
                    </div>
                {{/if}}
                <div class="item-infos">
                    <h3 class="item-title">{{item.title}}</h3>
                    <section class="item-meta">
                        {{t 'post.added'}} {{ago item.createdAt}}
                    </section>
                </div>
            {{/link-to}}
        {{/each}}
    {{/view}}
</section>
<section class="content-details">
    {{outlet}}
</section>
