{{#modal-dialog title=(t 'chooseImage') ok='save' okText=(t 'select') okClass='btn-primary' okDisabled=nothingSelected close='closeModal' closeText=(t 'cancel') modalClass='select-image'}}
    {{#view "paginated-scroll-box" tagName="section" classNames="select-images-grid-wrapper"}}
        <ol class="select-images-grid ">
            {{#each controller itemViewClass="modals/image" as |imageController|}}
                {{#if imageController.isUploading}}
                    {{spin-spinner lines=13 length=0 width=10}}
                {{else}}
                    <img src={{imageController.model.squareUrl}} class="img-responsive" />
                {{/if}}
            {{else}}
                <p>
                    {{t 'image.none'}}
                </p>
                <p>
                    {{t 'image.gotoSettings'}}
                </p>
            {{/each}}
        </ol>
    {{/view}}
{{/modal-dialog}}
