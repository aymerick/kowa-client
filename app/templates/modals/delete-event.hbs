{{#modal-dialog title=(t 'event.deleteQuestion') ok='delete' okText=(t 'delete') okClass='btn-danger' close='closeModal' closeText=(t 'cancel')}}
    <h2>{{model.title}}</h2>
    {{#if model.place}}
    <p>
        {{model.place}}
    </p>
    {{/if}}
    <p>
        {{model.dateSentence}}
    </p>
    {{#if model.cover}}
        <p>
            <img src={{model.cover.smallUrl}} class="img-responsive center-block" />
        </p>
    {{/if}}
{{/modal-dialog}}
