{{#modal-dialog title='Are you sure you want to delete this post?' ok='delete' okText='Delete' okClass='btn-danger' close='closeModal' closeText='Cancel'}}
    <h4>You're about to permanently delete that post:</h4>
    <h2>{{model.title}}</h2>
    {{#if model.cover}}
        <p>
            <img {{bind-attr src=model.cover.mediumUrl}} class="img-responsive center-block" />
        </p>
    {{/if}}
{{/modal-dialog}}
