{{#modal-dialog title=i18n.deleteQuestion ok='delete' okText=i18n.delete okClass='btn-danger' close='closeModal' closeText=i18n.cancel}}
    <h4>{{t 'post.deleteAction'}}</h4>
    <h2>{{model.title}}</h2>
    {{#if model.cover}}
        <p>
            <img {{bind-attr src=model.cover.smallUrl}} class="img-responsive center-block" />
        </p>
    {{/if}}
{{/modal-dialog}}
