{{#modal-dialog title='Are you sure you want to delete this activity?' ok='delete' okText='Delete' okClass='btn-danger' close='closeModal' closeText='Cancel'}}
    <h4>You're about to permanently delete this activity:</h4>
    <h2>{{model.title}}</h2>
    <p>
        {{model.summary}}
    </p>
    {{#if model.cover}}
        <p>
            <img {{bind-attr src=model.cover.smallUrl}} class="img-responsive center-block" />
        </p>
    {{/if}}
{{/modal-dialog}}
