<form class="signup-form" role="form" {{action 'signup' on='submit'}}>
    {{#if haveError}}
        <div class="alert alert-danger" role="alert">
            <div class="media">
                <div class="media-left">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                </div>
                <div class="media-body">
                    {{#if haveSeveralErrors}}
                        <h4>{{t 'errors'}}</h4>
                        <ul>
                            {{#each errorMessages as |errorMsg|}}
                                <li>{{errorMsg}}</li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <h4>{{t 'error'}}</h4>
                        {{firstErrorMsg}}
                    {{/if}}
                </div>
            </div>
        </div>
    {{/if}}
    <div class="form-group {{if errors.email 'has-error'}}">
        <label class="control-label" for="signup-email">{{t 'auth.email'}}</label>
        {{input id='signup-email' class='form-control' placeholder=i18n.enterEmail value=email required='required' autofocus='autofocus'}}
    </div>
    <div class="form-group {{if errors.username 'has-error'}}">
        <label class="control-label" for="signup-username">{{t 'auth.username'}}</label>
        {{input id='signup-username' class='form-control' placeholder=i18n.enterUsername value=username required='required'}}
    </div>
    <div class="form-group {{if errors.password 'has-error'}}">
        <label class="control-label" for="signup-password">{{t 'auth.password'}}</label>
        {{input id='signup-password' class='form-control' placeholder=i18n.enterPassword value=password type='password' required='required'}}
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">{{t 'auth.signup'}}</button>
</form>
<div class="signup-login">
    {{t 'auth.alreadyHaveAccount'}} {{#link-to 'login'}}{{t 'auth.loginHere'}}{{/link-to}}
</div>