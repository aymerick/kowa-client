<form class="signup-form" role="form" {{action 'signup' on='submit'}}>
    {{#if errorMsg}}
        <div class="alert alert-danger" role="alert">
            <div class="media">
                <div class="media-left">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                </div>
                <div class="media-body">
                    <span class="sr-only">Error:</span>
                    {{errorMsg}}
                </div>
            </div>
        </div>
    {{/if}}
    <div class="form-group">
        <label for="signup-email">{{t 'auth.email'}}</label>
        {{input id='signup-email' class='form-control' placeholder=i18n.enterEmail value=email required='required' autofocus='autofocus'}}
    </div>
    <div class="form-group">
        <label for="signup-username">{{t 'auth.username'}}</label>
        {{input id='signup-username' class='form-control' placeholder=i18n.enterUsername value=username required='required' autofocus='autofocus'}}
    </div>
    <div class="form-group">
        <label for="signup-password">{{t 'auth.password'}}</label>
        {{input id='signup-password' class='form-control' placeholder=i18n.enterPassword value=password type='password' required='required'}}
    </div>
    <button type="submit" class="btn btn-lg btn-primary btn-block">{{t 'auth.signup'}}</button>
</form>
<div class="signup-login">
    {{t 'auth.alreadyHaveAccount'}} {{#link-to 'login'}}{{t 'auth.loginHere'}}{{/link-to}}
</div>