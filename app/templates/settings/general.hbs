<header class="settings-header">
    <h2 class="settings-item-title">{{t 'General'}}</h2>

    <button class="btn btn-primary action-save" {{action "save"}} {{bind-attr disabled=isSaving}}><i class="fa fa-floppy-o"></i>{{t 'save'}}</button>
</header>

<form class="settings-body" role="form" {{action 'save' on='submit'}}>
    <div class="form-group">
        <label for="site-name">{{t 'site.name'}}</label>
        {{input id="site-name" name="general[name]" type="text" class="form-control" value=name}}
        <p class="info">
            {{t 'site.nameInfos'}}
        </p>
    </div>

    <div class="form-group">
        {{input type="checkbox" name="nameInNavBar" checked=model.nameInNavBar}} {{t 'site.displayNameInNavBar'}}
    </div>

    <div class="form-group">
        <label for="site-tagline">{{t 'site.tagline'}}</label>
        {{input id="site-tagline" name="general[tagline]" type="text" class="form-control" value=tagline}}
        <p class="info">
            {{t 'site.taglineInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="site-logo">{{t 'site.logo'}}</label>
        {{#if logo}}
            <button type="button" class="thumbnail select-image" {{action "openModal" "select-image" controller "logo"}}>
                <img id="site-logo" {{bind-attr src=logo.smallUrl}} alt="logo">
                <span class="remove-image" {{action 'removeLogo'}}>&#10006;</span>
            </button>
        {{else}}
            <button type="button" class="btn btn-success" {{action "openModal" "select-image" controller "logo"}}>{{t 'chooseImage'}}</button>
        {{/if}}
        <p class="info">
            {{t 'site.logoInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="site-theme">{{t 'site.theme'}}</label>
        {{view "select" id="site-theme" content=allThemes selection=theme class="form-control"}}
        <p class="info">
            {{t 'site.themeInfos'}}
        </p>
    </div>
</form>
