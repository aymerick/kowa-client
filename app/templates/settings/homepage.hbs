<header class="settings-header">
    <h2 class="settings-item-title">{{t 'Homepage'}}</h2>

    <button class="btn btn-primary action-save" {{action "save"}} disabled={{isSaving}}><i class="fa fa-floppy-o"></i>{{t 'save'}}</button>
</header>

<form class="settings-body" role="form" {{action 'save' on='submit'}}>
    <div class="form-group">
        <label for="site-cover">{{t 'homepage.cover'}}</label>
        {{#if model.cover}}
            <button type="button" class="thumbnail select-image" {{action "openModal" "select-image" controller "cover"}}>
                <img id="site-cover" src={{model.cover.smallUrl}} alt={{t 'coverImage'}}>
                <span class="remove-image" {{action 'removeCover'}}>&#10006;</span>
            </button>
        {{else}}
            <button type="button" class="btn btn-success" {{action "openModal" "select-image" controller "cover"}}>{{t 'chooseImage'}}</button>
        {{/if}}
        <p class="info">
            {{t 'homepage.coverInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="site-description">{{t 'homepage.description'}}</label>
        {{ck-editor value=model.description value-id=model.id on-change="descriptionChanged"}}
        <p class="info">
            {{t 'homepage.descriptionInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="site-more-desc">{{t 'homepage.additionalDescription'}}</label>
        {{ck-editor value=model.moreDesc value-id=model.id on-change="moreDescChanged"}}
        <p class="info">
            {{t 'homepage.additionalDescriptionInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="site-join-text">{{t 'homepage.joinText'}}</label>
        {{ck-editor value=model.joinText value-id=model.id on-change="joinTextChanged"}}
        <p class="info">
            {{t 'homepage.joinTextInfos'}}
        </p>
    </div>
</form>
