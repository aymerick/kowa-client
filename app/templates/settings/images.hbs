<header class="settings-view-header">
    <h2>Images</h2>
</header>
<section>
    <ol class="images-grid">
        {{#each image in controller itemViewClass="settings/image"}}
            <img {{bind-attr src=image.mediumUrl}} class="img-responsive" />
            <div class="caption">
              <p>Added: {{ago image.createdAt}}</p>
              <p><button type="button" class="btn btn-danger" {{action "openModal" "delete-image" image}}>Delete</button></p>
            </div>
        {{/each}}
    </ol>
<section>
