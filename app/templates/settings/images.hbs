<header class="settings-view-header">
    <h2>Images</h2>
</header>
<section>
    <ol class="images-grid">
        <li class="image-uploader btn-success">
            {{image-uploader upload='uploadImage'}}
        </li>
        {{#each image in controller itemViewClass="settings/image"}}
            {{#if image.isUploading}}
                {{spin-spinner lines=13 length=20 width=10}}
                {{progress-bar progress=image.uploadProgress}}
            {{else}}
                <img {{bind-attr src=image.mediumCropUrl}} class="img-responsive" />
                <div class="caption">
                    <p>
                        Added: {{ago image.createdAt}}
                    </p>
                    <button type="button" class="btn btn-sm btn-danger delete-button" {{action "openModal" "delete-image" controller image}}>Delete</button>
                </div>
            {{/if}}
        {{/each}}
    </ol>
<section>
