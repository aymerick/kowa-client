<header class="settings-header settings-item-show">
    {{#link-to "settings.activities.index" class="btn btn-default action-back"}}<i class="fa fa-angle-left"></i> {{t 'Activities'}}{{/link-to}}

    <h2 class="settings-item-title">{{model.title}}</h2>

    <button class="btn btn-primary action-save" {{action "save"}}><i class="fa fa-floppy-o"></i> {{t 'save'}}</button>
</header>

<form class="settings-body" id="settings-activity" role="form" {{action 'save' on='submit'}}>
    <div class="form-group">
        <label for="activity-title">{{t 'activity.name'}}</label>
        {{input id="activity-title" name="activity[title]" type="text" class="form-control" value=model.title}}
        <p class="info">
            {{t 'activity.nameInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="activity-summary">{{t 'activity.summary'}}</label>
        {{tinymce-editor value=unboundSummary onChange="summaryChanged" height=150 id="activity-summary"}}
        <p class="info">
            {{t 'activity.summaryInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="activity-body">{{t 'activity.description'}}</label>
        {{tinymce-editor value=unboundBody onChange="bodyChanged" height=300 id="activity-body"}}
        <p class="info">
            {{t 'activity.descriptionInfos'}}
        </p>
    </div>

    <div class="form-group">
        <label for="activity-cover">{{t 'activity.cover'}}</label>
        {{#if model.cover}}
            <button type="button" class="thumbnail select-image" {{action "openModal" "select-image" controller "cover"}}>
                <img id="activity-cover" {{bind-attr src=cover.smallUrl}} alt="cover">
                <span class="remove-image" {{action 'removeCover'}}>&#10006;</span>
            </button>
        {{else}}
            <button type="button" class="btn btn-success" {{action "openModal" "select-image" controller "cover"}}>{{t 'chooseImage'}}</button>
        {{/if}}
        <p class="info">
            {{t 'activity.coverInfos'}}
        </p>
    </div>
</form>
