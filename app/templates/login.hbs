<div class="container login-box">
    <div class="login-logo">
        <img src="/images/ninja_150x150.png" alt="Kowa Logo" class="img-responsive" />
    </div>
    <form class="login-form" role="form" {{action 'authenticate' on='submit'}}>
        <div class="form-group">
            <label for="login-email">Username or Email address</label>
            {{input id='login-email' class='form-control' placeholder='Enter username' required='required' autofocus='autofocus' value=identification}}
        </div>
        <div class="form-group">
            <label for="login-password">Password</label>
            {{input id='login-password' class='form-control' placeholder='Enter password' type='password' required='required' value=password}}
        </div>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
    </form>
</div>